function greet(person) {
    if (person == "Anakin") {
        console.log("Good day Anakin! " + "it is now " + timeOfDay);
    }
    if (person == "Count Dooku") {
        console.log("I'm coming for you, Dooku! " +  "it is now " + timeOfDay);
    }
    else {
        console.log("good day " + "it is now " + timeOfDay);
    }
}
var timeOfDay = new Date(); //found 'new Date()' function on digitalocean.com 
timeOfDay; //honestly I couldn't figure out how to just set the current local time in the code. So you get the day, the date, the time, and the timezone in GMT
greet("Anakin");
greet("Count Dooku");
greet("Jonathan");